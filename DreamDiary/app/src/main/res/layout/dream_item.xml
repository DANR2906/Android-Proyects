<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/border_dream_item"
    android:padding="10dp"
    android:id="@+id/relative_layout">

    <TextView
        android:id="@+id/text_view_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_dream_item_date"
        android:text="7"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="2dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/text_view_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_dream_item_date"
        android:text="06"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/text_view_day"
        android:layout_marginEnd="2dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/text_view_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_dream_item_date"
        android:text="20"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/text_view_month"
        android:layout_marginEnd="2dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/text_view_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Este es mi titulo"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@+id/text_view_year"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

    <ImageButton
        android:id="@+id/image_button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_dream_item_date"
        android:src="@drawable/ic_cancel_x"
        android:layout_marginEnd="2dp"
        android:visibility="invisible"
    />

    <ImageButton
        android:id="@+id/image_button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_dream_item_date"
        android:src="@drawable/ic_delete_dream"
        android:layout_marginEnd="2dp"
        android:layout_toEndOf="@+id/image_button_cancel"
        android:visibility="invisible"
    />
    <ImageButton
        android:id="@+id/image_button_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_dream_item_date"
        android:src="@drawable/ic_edit_dream"
        android:layout_marginEnd="2dp"
        android:layout_toEndOf="@+id/image_button_delete"
        android:visibility="invisible"
    />




</RelativeLayout>
