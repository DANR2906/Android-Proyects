<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titulo_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@android:color/black"
        android:textSize="24dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/entrada_num1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo_app"
        android:layout_marginTop="10sp"
        android:hint="Numero uno"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/entrada_num2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entrada_num1"
        android:layout_marginTop="10sp"
        android:hint="Numero dos"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/boton_suma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sumar"
        android:background="@color/colorAccent"
        android:layout_below="@id/entrada_num2"
        android:layout_marginTop="20dp"
        android:onClick="boton_sumar"/>

    <Button
        android:id="@+id/boton_resta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restar"
        android:background="@color/colorAccent"
        android:layout_below="@id/boton_suma"
        android:layout_marginTop="10dp"
        android:onClick="boton_restar"/>

    <Button
        android:id="@+id/boton_multiplicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Multiplicar"
        android:background="@color/colorAccent"
        android:layout_below="@id/boton_resta"
        android:layout_marginTop="10dp"
        android:onClick="boton_mult"/>

    <Button
        android:id="@+id/boton_division"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dividir"
        android:background="@color/colorAccent"
        android:layout_below="@id/boton_multiplicacion"
        android:layout_marginTop="10dp"
        android:onClick="boton_division"/>

    <TextView
        android:id="@+id/texto_respuesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Respuesta"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_below="@id/boton_division"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textStyle="bold"/>



</RelativeLayout>